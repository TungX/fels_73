<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "FELS", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home"), root_path %></li>
        <li><%= link_to t("help"), help_path %></li>
        <% if signed_in? && current_user.admin? %>
          <li><%= link_to t("users"), admin_users_path %></li>
        <% else %>
          <li><%= link_to t("users"), users_path %></li>
        <% end %>
        <% if signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "category" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("category"), categories_path %></li>
              <li><%= link_to t("show_word"), words_path %></li>
              <% if signed_in? && current_user.admin? %>
              <li class="divider"></li>
              <li>
                <%= link_to t("setting"), admin_categories_path %>
              </li>
              <% end %>
            </ul>
          </li>
        <% end %>
        <% unless signed_in? %>
          <li><%= link_to t("signin") , signin_path %></li>
        <% else %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("profile"), current_user %></li>
              <li>
                <%= link_to t("setting"), edit_user_path(current_user) %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to t("signout"), signout_path, method: :delete %>
              </li>
            </ul>
          </li>
          <li></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <p>
        <%= avatar_for user %>
        <%= link_to user.name, user %>
        <%= link_to t('delete'), user, method: :delete if signed_in? && current_user.admin? && current_user.id != user.id %>
      </p>
    </section>
  </aside>
</div>

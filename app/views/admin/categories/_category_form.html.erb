<%= form_for [:admin, @category] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <%= f.submit @category.id? ? t("update"): t("create_category"),
    class: "btn btn-primary" %>
<% end %>

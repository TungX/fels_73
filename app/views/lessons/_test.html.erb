<h1><%= t "lesson" %></h1>
<li>
  <p>
  <%= t "category" %>: <%= link_to @lesson.category.name, @lesson.category %>
  <%= t "has" %>: <%= @lesson.words.count %> <%= t "words" %>
  </p>
  <%= form_for @lesson do |f| %>
    <%= f.hidden_field :learned, value: true %>
    <%= f.fields_for :lesson_words do |lesson_word| %>
      <%= render "word_form", f: lesson_word %>
    <% end %>
    <%= f.submit t "submit" %>
  <% end %>
</li>
